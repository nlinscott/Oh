<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:longClickable="true"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:background="@color/midblue"
    android:weightSum="15"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <LinearLayout
         android:layout_gravity="center"
         android:animateLayoutChanges="true"
         android:orientation="vertical"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">
         <!-- TODO: for reordering, we have these ImageButtons, but they need a good icon -->
            <ImageButton
                android:visibility="visible"
                android:id="@+id/move_up_one"
                android:background="@android:color/transparent"
                android:src="@mipmap/arrow_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:visibility="visible"
                android:id="@+id/move_down_one"
                android:background="@android:color/transparent"
                android:src="@mipmap/arrow_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
         </LinearLayout>
    <LinearLayout
        android:padding="5dp"
        android:layout_weight="15"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="24sp"
            android:text="nic linscott"
            android:textColor="@color/lightgray"
            android:id="@+id/edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoText="false" />

        <TextView
            android:text="12345677"
            android:textColor="@color/lightgray"
            android:id="@+id/edit_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/remove_btn"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:padding="5dp"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_close_clear_cancel"/>
</LinearLayout>