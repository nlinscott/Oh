<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/contact_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!-- TODO: STYLE STYLE STYLE.... everything  -->
    <LinearLayout
        android:padding="25dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            android:text="John Spinkles"
            android:textSize="35sp"
            android:textColor="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center"
            android:id="@+id/number"
            android:textSize="20sp"
            android:text="1234567899"
            android:textColor="@color/lightblue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">


        <Button
            android:text="@string/omw"
            android:clickable="true"
            android:enabled="true"
            android:id="@+id/btn_widget_leaving"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/midblue"
            android:textColor="@color/lightgray"
            android:textStyle="bold|italic" />
        <Button
            android:text="@string/here"
            android:clickable="true"
            android:enabled="true"
            android:id="@+id/btn_widget_here"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/darkblue"
            android:textColor="@color/lightblue"
            android:textStyle="bold|italic" />
        </LinearLayout>
</LinearLayout>