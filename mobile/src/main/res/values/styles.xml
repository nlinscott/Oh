<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Oh</item>
        <item name="android:windowBackground">@color/background_main</item>
        <item name="android:textColor">@color/white</item>
    </style>


        <style name="ActionBar.Solid.Oh" parent="android:Widget.Holo.ActionBar">
            <item name="android:background">@color/upper_border</item>
            <item name="android:titleTextStyle">@style/ActionBar.TitleTextStyle</item>
        </style>

            <style name="ActionBar.TitleTextStyle" parent="@android:style/TextAppearance">
                <item name="android:textColor">@color/white</item>
            </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>
